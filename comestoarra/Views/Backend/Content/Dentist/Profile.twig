{% extends 'Backend/Master/Base.twig' %}

{% block title %}{{ NAME }} - {{ TITLE }}{% endblock %}

{% block head %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ GLOBAL_COMPONENTS }}datatables/media/css/dataTables.bootstrap.min.css" type="text/css" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

    <link rel="stylesheet" href="{{ GLOBAL_COMPONENTS }}jqueryui-timepicker-addon/dist/jquery-ui-timepicker-addon.min.css" type="text/css" />

    <link rel="stylesheet" href="{{ GLOBAL_COMPONENTS }}fancybox/source/jquery.fancybox.css" type="text/css" />

{% endblock %}

{% block content %}

    {% if error %}

        {{ error }}

    {% endif %}

    <div class="container{% if CONTENT_FLUID %}-fluid{% endif %}">
        <!-- Page Heading -->
        <div class="row page-header">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="{{ urlFor( 'dashboard' ) }}">Dashboard</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-user"></i> My Profile
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <!-- /.row -->
        <div class="row">
            <div class="col-lg-3">

                <div class="panel panel-default">
                    <div class="modal-body">
                        {% if DENTIST_PROFILE['avatar'] %}
                            <p align="center"> <img src="{{ PUBLIC_DIR }}avatars/dentists/{{ DENTIST_PROFILE['avatar'] }}" alt="" width="250px"></p>
                        {% else %}
                            <p align="center"><img src="{{ PUBLIC_DIR }}avatars/default.jpg" alt="" width="200px"></p>
                        {% endif %}
                        <hr>
                        <p align="center">
                            <strong>#{{ NAME }} - {{ DENTIST_PROFILE['birthdate']|replace({'-': ''}) }} - DDS{{ DENTIST_PROFILE['dentist_id']|e }}</strong>
                        </p>
                        <hr>
                        <p align="center">
                            <strong>
                                {% if DENTIST_PROFILE['last_name'] %}{{ DENTIST_PROFILE['last_name']|e }}, {% endif %}{{ DENTIST_PROFILE['first_name']|e }}
                                {% if DENTIST_PROFILE['specialties'] %}
                                    <br>
                                    <a class="label label-info">{{ DENTIST_PROFILE['specialties']|e }}</a>
                                {% endif %}
                            </strong>
                        </p>
                    </div>

                    <div class="modal-footer">

                        <div class="col-md-12">

                            <form id="uploadAvatarAction" action="{{ urlFor( 'uploadDentistAvatarAction' ) }}" method="post" enctype="multipart/form-data">
                                <span id="avatar_button" class="btn btn-block btn-default btn-file" rel="tooltip"  data-placement="bottom" title="Select an avatar image from your hard-disk, only .jpg">
                                    UPLOAD NEW AVATAR <input type="file" id="avatar_file" name="avatar_file" accept="image/*" required >
                                </span>
                                <input type="hidden" name="MAX_FILE_SIZE" value="{{ HUGE_AVATAR_MAX_SIZE }}" />
                                <input type="hidden" id="dentist_id" name="dentist_id" value="{{ DENTIST_PROFILE['dentist_id'] }}">
                                <input type="hidden" id="first_name" name="first_name" value="{{ DENTIST_PROFILE['first_name'] }}">
                                <input type="hidden" id="last_name" name="last_name" value="{{ DENTIST_PROFILE['last_name'] }}">
                                <input type="hidden" id="user_name" name="user_name" value="{{ DENTIST_PROFILE['user_name'] }}">
                                <input type="hidden" id="user_email" name="user_email" value="{{ DENTIST_PROFILE['user_email'] }}">
                                <output id="cbn_avatar_list"></output>


                                <input type="submit" id="avatar_upload" onclick="return comestoarraAlert( '#uploadAvatarAction', 'warning', '' );" class='btn btn-block btn-success' value="UPLOAD NEW AVATAR">
                                <a id="avatar_upload_cancel" onclick="reload()" class='btn btn-block btn-danger'>CANCEL</a>

                                <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                            </form>

                        </div>

                    </div>


                </div>

            </div>

            <div class="col-lg-9">

                <div class="panel panel-default">

                    <div class="panel-body">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs"> <!-- Nav tabs/pills -->
                            <li class="active"><a href="#profile" data-toggle="tab">Dentist Profile</a></li>
                            <li><a href="#auth" data-toggle="tab">Login Information</a></li>
                            <li><a href="#timetable" data-toggle="tab">Time Table</a></li>
                            <li><a href="#appointment" data-toggle="tab">Patient Appointment</a></li>
                            <li><a href="#dentist-calendar" data-toggle="tab">Appointment Calendar</a></li>
                            <li><a href="#activities" data-toggle="tab">My Activities</a></li>
                            <li><a href="#messages" data-toggle="tab">My Messages</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">

                            <div class="tab-pane fade in active" id="profile">
                                <br />

                                <form id="updateProfileAction" role="form" method="post" action="{{ urlFor( 'updateDentistProfileAction' ) }}">

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="first_name">First Name</label>
                                            <input id="first_name" name="first_name" class="form-control" value="{{ DENTIST_PROFILE['first_name'] }}">
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="last_name">Last Name</label>
                                            <input id="last_name" name="last_name" class="form-control" value="{{ DENTIST_PROFILE['last_name'] }}">
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="birthdate">Birthday</label>
                                            <input id="birthdate" name="birthdate" class="form-control" value="{{ DENTIST_PROFILE['birthdate'] }}">
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="phone">Phone</label>
                                            <input id="phone" name="phone" class="form-control" value="{{ DENTIST_PROFILE['phone'] }}">
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="cellphone">Cell Phone</label>
                                            <input id="cellphone" name="cellphone" class="form-control" value="{{ DENTIST_PROFILE['cellphone'] }}">
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="specialties">Specialties ?</label>
                                            <select name="specialties" id="specialties" class="form-control">
                                                <option value="General Dentistry" {% if DENTIST_PROFILE['specialties'] == 'General Dentistry' %}selected{% endif %}>General Dentistry</option>
                                                <option value="Dental Public Health" {% if DENTIST_PROFILE['specialties'] == 'Dental Public Health' %}selected{% endif %}>Dental Public Health</option>
                                                <option value="Endodontics" {% if DENTIST_PROFILE['specialties'] == 'Endodontics' %}selected{% endif %}>Endodontics</option>
                                                <option value="Oral and Maxillofacial Surgery" {% if DENTIST_PROFILE['specialties'] == 'Oral and Maxillofacial Surgery' %}selected{% endif %}>Oral and Maxillofacial Surgery</option>
                                                <option value="Oral Medicine and Pathology" {% if DENTIST_PROFILE['specialties'] == 'Oral Medicine and Pathology' %}selected{% endif %}>Oral Medicine and Pathology</option>
                                                <option value="Orthodontics and Dentofacial Orthopedics" {% if DENTIST_PROFILE['specialties'] == 'Orthodontics and Dentofacial Orthopedics' %}selected{% endif %}>Orthodontics and Dentofacial Orthopedics</option>
                                                <option value="Oral & Maxillofacial Radiology" {% if DENTIST_PROFILE['specialties'] == 'Oral & Maxillofacial Radiology' %}selected{% endif %}>Oral & Maxillofacial Radiology</option>
                                                <option value="Pediatric Dentistry" {% if DENTIST_PROFILE['specialties'] == 'Pediatric Dentistry' %}selected{% endif %}>Pediatric Dentistry</option>
                                                <option value="Periodontics" {% if DENTIST_PROFILE['specialties'] == 'Periodontics' %}selected{% endif %}>Periodontics</option>
                                                <option value="Prosthodontics" {% if DENTIST_PROFILE['specialties'] == 'Prosthodontics' %}selected{% endif %}>Prosthodontics</option>
                                            </select>
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="bio">Bio</label>
                                            <textarea id="bio" name="bio" class="form-control" rows="3">{{ DENTIST_PROFILE['bio'] }}</textarea>
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="address">Address</label>
                                            <textarea id="address" name="address" class="form-control" rows="3">{{ DENTIST_PROFILE['address'] }}</textarea>
                                        </div>

                                    </div>

                                    <input type="hidden" id="dentist_id" name="dentist_id" value="{{ DENTIST_PROFILE['dentist_id'] }}">

                                    <div class="col-md-6">

                                        <button type="submit" class="btn btn-primary" onclick="return comestoarraAlert( '#updateProfileAction', 'warning', '' );">Update Profile</button>

                                    </div>

                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                </form>

                            </div>

                            <div class="tab-pane fade in" id="auth">
                                <br />

                                <div class="col-md-6">

                                    <div class="form-group">
                                        <label for="user_email">Email Address <a class="cbn-modal-link" href="#" data-toggle="modal" data-target="#changeEmail">change your email ?</a></label>
                                        <input id="user_email" class="form-control" value="{{ DENTIST_PROFILE['user_email'] }}" disabled>
                                    </div>

                                </div>

                                <div class="col-md-6">

                                    <label>Username <a class="cbn-modal-link" href="#" data-toggle="modal" data-target="#changeUsername">change your username ?</a></label>
                                    <div class="form-group input-group">
                                        <span class="input-group-addon">@</span>
                                        <input type="text" class="form-control" placeholder="Username" value="{{ DENTIST_PROFILE['user_name'] }}" disabled>
                                    </div>

                                </div>

                                <form id="changePasswordAction" role="form" method="post" action="{{ urlFor( 'changeDentistPasswordAction' ) }}">

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="reset_input_password_new">Password</label>
                                            <input id="reset_input_password_new" class="form-control" type="text"
                                                   name="user_password_new" required autocomplete="off" />
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="reset_input_password_repeat">Password (again)</label>
                                            <input id="reset_input_password_repeat" class="form-control" type="password"
                                                   name="user_password_repeat" required autocomplete="off" />
                                        </div>

                                    </div>

                                    <input type="hidden" id="dentist_id" name="dentist_id" value="{{ DENTIST_PROFILE['dentist_id'] }}">
                                    <input type="hidden" id="user_name" name="user_name" value="{{ DENTIST_PROFILE['user_name'] }}">


                                    <div class="col-md-6">

                                        <button type="submit" class="btn btn-danger" onclick="return comestoarraAlert( '#changePasswordAction', 'warning', '' );">Change Password</button>

                                    </div>

                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                </form>

                                <!-- Change Email Modal -->
                                <div class="modal fade" id="changeEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                <h4 class="modal-title" id="myModalLabel">Change Email Address : {{ DENTIST_PROFILE['user_email'] }}</h4>
                                            </div>

                                            <form action="{{ urlFor( 'changeDentistEmailAction' ) }}" method="post" role="form">
                                                <div class="modal-body">

                                                    <div class="form-group">
                                                        <label for="user_email">New Email Address</label>
                                                        <input id="user_email" class="form-control" type="text" name="user_email" required>
                                                        <p class="help-block">Please provide an valid Email Address !</p>
                                                    </div>

                                                </div>
                                                <input type="hidden" id="dentist_id" name="dentist_id" value="{{ DENTIST_PROFILE['dentist_id'] }}">
                                                <input type="hidden" id="user_name" name="user_name" value="{{ DENTIST_PROFILE['user_name'] }}">
                                                <div class="modal-footer">

                                                    <a class="btn btn-danger" data-dismiss="modal">Close</a>
                                                    <button type="submit" class="btn btn-success">Submit</button>

                                                </div>

                                                <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                            </form>

                                        </div>
                                        <!-- /.modal-content -->
                                    </div>
                                    <!-- /.modal-dialog -->
                                </div>
                                <!-- /.modal -->

                                <!-- Change Username Modal -->
                                <div class="modal fade" id="changeUsername" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                <h4 class="modal-title" id="myModalLabel">Change Username : @{{ DENTIST_PROFILE['user_name'] }}</h4>
                                            </div>
                                            <form action="{{ urlFor( 'changeDentistUsernameAction' ) }}" method="post" role="form">
                                                <div class="modal-body">

                                                    <div class="form-group input-group">
                                                        <span class="input-group-addon">@</span>
                                                        <input type="text" class="form-control" placeholder="New Username" name="user_name" required>
                                                    </div>

                                                </div>

                                                <input type="hidden" id="dentist_id" name="dentist_id" value="{{ DENTIST_PROFILE['dentist_id'] }}">
                                                <input type="hidden" id="user_email" name="user_email" value="{{ DENTIST_PROFILE['user_email'] }}">
                                                <div class="modal-footer">

                                                    <a class="btn btn-danger" data-dismiss="modal">Close</a>
                                                    <button type="submit" class="btn btn-success">Submit</button>

                                                </div>

                                                <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                            </form>
                                        </div>
                                        <!-- /.modal-content -->
                                    </div>
                                    <!-- /.modal-dialog -->
                                </div>
                                <!-- /.modal -->

                            </div>

                            <div class="tab-pane fade in" id="timetable">
                                    <br />

                                    <form id="updateTimetableAction" action="{{ urlFor( 'updateDentistTimetableAction' ) }}" method="post" role="form">
                                        <div class="modal-body">

                                            <div class="row">
                                                <div class="col-lg-2">
                                                    <div class="form-group">
                                                        <div class="col-lg-12">
                                                            <h3 style="color: #d20c0c;">SUN</h3>
                                                        </div>

                                                    </div>
                                                </div>
                                                <div class="col-lg-10">
                                                    <div class="form-group">
                                                        <div class="col-lg-12">
                                                            <div class="col-lg-5">
                                                                <label for="sunday_timepicker_start"></label>
                                                                <input id="sunday_timepicker_start" class="form-control cbn-timepicker" type="text" name="sunday_timepicker_start" value="{% if DENTIST_PROFILE['timetable_sunday_start'] == "Appointment Only" %}{% else %}{{ DENTIST_PROFILE['timetable_sunday_start'] }}{% endif %}">
                                                            </div>

                                                                <input id="wednesday_timepicker_start" class="form-control cbn-timepicker" type="text" name="wednesday_timepicker_start" value="{% if DENTIST_PROFILE['timetable_wednesday_start'] == "Appointment Only" %}{% else %}{{ DENTIST_PROFILE['timetable_wednesday_start'] }}{% endif %}">

{% extends 'Backend/Master/Base.twig' %}

{% block title %}{{ NAME }} - {{ TITLE }}{% endblock %}

{% block head %}

    {{ parent() }}

    <link rel="stylesheet" href="{{ GLOBAL_COMPONENTS }}datatables/media/css/dataTables.bootstrap.min.css" type="text/css" />

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">

    <link rel="stylesheet" href="{{ GLOBAL_COMPONENTS }}jqueryui-timepicker-addon/dist/jquery-ui-timepicker-addon.min.css" type="text/css" />

{% endblock %}

{% block content %}

    {% if error %}

        {{ error }}

    {% endif %}

    <div class="container{% if CONTENT_FLUID %}-fluid{% endif %}">
        <!-- Page Heading -->
        <div class="row page-header">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i>  <a href="{{ urlFor( 'dashboard' ) }}">Dashboard</a>
                    </li>
                    <li>
                        <i class="fa fa-users"></i>  <a href="{{ urlFor( 'patients' ) }}">Patients Manager</a>
                    </li>
                    <li class="active">
                        <i class="fa fa-user"></i> Patient Profile
                    </li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        {% if PERMISSION %}

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-3">

                    <div class="panel panel-default">
                        <div class="modal-body">
                            {% if PATIENT_PROFILE['avatar'] %}
                                <p align="center"> <img src="{{ PUBLIC_DIR }}avatars/patients/{{ PATIENT_PROFILE['avatar'] }}" alt="" width="250px"></p>
                            {% else %}
                                <p align="center"><img src="{{ PUBLIC_DIR }}avatars/default.jpg" alt="" width="200px"></p>
                            {% endif %}
                            <hr>
                            <p align="center">
                                <strong>
                                    {% if PATIENT_PROFILE['last_name'] %}{{ PATIENT_PROFILE['last_name']|e }}, {% endif %}{{ PATIENT_PROFILE['first_name']|e }}
                                </strong>
                            </p>
                            <hr>
                            <p align="center">
                                <strong>#{{ NAME }} - {{ PATIENT_PROFILE['birthdate']|replace({'-': ''}) }} - P{{ PATIENT_PROFILE['patient_id']|e }}</strong>
                            </p>
                        </div>
                        <div class="modal-footer">

                            <div class="col-md-12">

                                <form id="uploadAvatarAction" action="{{ urlFor( 'uploadPatientAvatarAction' ) }}" method="post" enctype="multipart/form-data">
                                    <span id="avatar_button" class="btn btn-block btn-default btn-file" rel="tooltip"  data-placement="bottom" title="Select an avatar image from your hard-disk, only .jpg">
                                        UPLOAD NEW AVATAR <input type="file" id="avatar_file" name="avatar_file" accept="image/*" required >
                                    </span>
                                    <input type="hidden" name="MAX_FILE_SIZE" value="{{ HUGE_AVATAR_MAX_SIZE }}" />
                                    <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">
                                    <input type="hidden" id="first_name" name="first_name" value="{{ PATIENT_PROFILE['first_name'] }}">
                                    <input type="hidden" id="last_name" name="last_name" value="{{ PATIENT_PROFILE['last_name'] }}">
                                    <input type="hidden" id="user_name" name="user_name" value="{{ PATIENT_PROFILE['user_name'] }}">
                                    <input type="hidden" id="user_email" name="user_email" value="{{ PATIENT_PROFILE['user_email'] }}">
                                    <output id="cbn_avatar_list"></output>
                                    <input type="submit" id="avatar_upload" onclick="return comestoarraAlert( '#uploadAvatarAction', 'warning', '' );" class='btn btn-block btn-success' value="UPLOAD NEW AVATAR">
                                    <a id="avatar_upload_cancel" onclick="reload()" class='btn btn-block btn-danger'>CANCEL</a>
                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                </form>

                            </div>

                        </div>

                    </div>

                </div>

                <div class="col-lg-9">

                    <div class="panel panel-default">

                        <div class="panel-body">
                            <!-- Nav tabs -->
                            <ul class="nav nav-tabs"> <!-- Nav tabs/pills -->
                                <li class="active"><a href="#profile" data-toggle="tab">Patient Profile</a></li>
                                {% if PATIENT_PROFILE['can_login'] %}
                                    <li><a href="#auth" data-toggle="tab">Login Information</a></li>
                                {% endif %}
                                <li><a href="#appointment" data-toggle="tab">Patient Appointment</a></li>
                            </ul>

                            <!-- Tab panes -->
                            <div class="tab-content">

                                <div class="tab-pane fade in active" id="profile">
                                    <br />

                                    <form id="updateProfileAction" role="form" method="post" action="{{ urlFor( 'updatePatientProfileAction' ) }}">

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="first_name">First Name</label>
                                                <input id="first_name" name="first_name" class="form-control" value="{{ PATIENT_PROFILE['first_name'] }}">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="last_name">Last Name</label>
                                                <input id="last_name" name="last_name" class="form-control" value="{{ PATIENT_PROFILE['last_name'] }}">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="birthdate">Birthday</label>
                                                <input id="birthdate" name="birthdate" class="form-control" value="{{ PATIENT_PROFILE['birthdate'] }}">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="phone">Phone</label>
                                                <input id="phone" name="phone" class="form-control" value="{{ PATIENT_PROFILE['phone'] }}">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="cellphone">Cell Phone</label>
                                                <input id="cellphone" name="cellphone" class="form-control" value="{{ PATIENT_PROFILE['cellphone'] }}">
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="gender">Gender ?</label>
                                                <select name="gender" id="gender" class="form-control">
                                                    <option value="2" {% if PATIENT_PROFILE['gender'] == '2' %}selected{% endif %}>Male</option>
                                                    <option value="1" {% if PATIENT_PROFILE['gender'] == '1' %}selected{% endif %}>Female</option>
                                                </select>
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="bio">Bio</label>
                                                <textarea id="bio" name="bio" class="form-control" rows="3">{{ PATIENT_PROFILE['bio'] }}</textarea>
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="address">Address</label>
                                                <textarea id="address" name="address" class="form-control" rows="3">{{ PATIENT_PROFILE['address'] }}</textarea>
                                            </div>

                                        </div>

                                        <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">

                                        <div class="col-md-6">

                                            <button type="submit" class="btn btn-primary" onclick="return comestoarraAlert( '#updateProfileAction', 'warning', '' );">Update Profile</button>

                                        </div>

                                        <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                    </form>

                                </div>

                                <div class="tab-pane fade in" id="auth">
                                    <br />

                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label for="user_email">Email Address {% if ( user.user_id != ID and ROLE == 7 ) %}<a class="cbn-modal-link" href="#" data-toggle="modal" data-target="#changeEmail">change your email ?</a>{% endif %}</label>
                                            <input id="user_email" class="form-control" value="{{ PATIENT_PROFILE['user_email'] }}" disabled>
                                        </div>

                                    </div>

                                    <div class="col-md-6">

                                        <label>Username {% if ( user.user_id != ID and ROLE == 7 ) %}<a class="cbn-modal-link" href="#" data-toggle="modal" data-target="#changeUsername">change your username ?</a>{% endif %}</label>
                                        <div class="form-group input-group">
                                            <span class="input-group-addon">@</span>
                                            <input type="text" class="form-control" placeholder="Username" value="{{ PATIENT_PROFILE['user_name'] }}" disabled>
                                        </div>

                                    </div>

                                    {% if ( user.user_id != ID and ROLE == 7 ) %}

                                    <form id="changePasswordAction" role="form" method="post" action="{{ urlFor( 'changePatientPasswordAction' ) }}">

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="reset_input_password_new">Password</label>
                                                <input id="reset_input_password_new" class="form-control" type="text"
                                                       name="user_password_new" required autocomplete="off" />
                                            </div>

                                        </div>

                                        <div class="col-md-6">

                                            <div class="form-group">
                                                <label for="reset_input_password_repeat">Password (again)</label>
                                                <input id="reset_input_password_repeat" class="form-control" type="password"
                                                       name="user_password_repeat" required autocomplete="off" />
                                            </div>

                                        </div>

                                        <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">
                                        <input type="hidden" id="user_name" name="user_name" value="{{ PATIENT_PROFILE['user_name'] }}">

                                        <div class="col-md-6">

                                            <button type="submit" class="btn btn-danger" onclick="return comestoarraAlert( '#changePasswordAction', 'warning', '' );">Change Password</button>

                                        </div>

                                        <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                    </form>

                                    {% endif %}

                                    {% if ( user.user_id != ID and ROLE == 7 ) %}

                                        <!-- Change Email Modal -->
                                        <div class="modal fade" id="changeEmail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                        <h4 class="modal-title" id="myModalLabel">Change Email Address : {{ PATIENT_PROFILE['user_email'] }}</h4>
                                                    </div>

                                                    <form action="{{ urlFor( 'changePatientEmailAction' ) }}" method="post" role="form">
                                                        <div class="modal-body">

                                                            <div class="form-group">
                                                                <label for="user_email">New Email Address</label>
                                                                <input id="user_email" class="form-control" type="text" name="user_email" required>
                                                                <p class="help-block">Please provide an valid Email Address !</p>
                                                            </div>

                                                        </div>
                                                        <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">
                                                        <input type="hidden" id="user_name" name="user_name" value="{{ PATIENT_PROFILE['user_name'] }}">
                                                        <div class="modal-footer">

                                                            <a class="btn btn-danger" data-dismiss="modal">Close</a>
                                                            <button type="submit" class="btn btn-success">Submit</button>

                                                        </div>

                                                        <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                    </form>

                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>
                                        <!-- /.modal -->

                                        <!-- Change Username Modal -->
                                        <div class="modal fade" id="changeUsername" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                        <h4 class="modal-title" id="myModalLabel">Change Username : @{{ PATIENT_PROFILE['user_name'] }}</h4>
                                                    </div>
                                                    <form action="{{ urlFor( 'changePatientUsernameAction' ) }}" method="post" role="form">
                                                        <div class="modal-body">

                                                            <div class="form-group input-group">
                                                                <span class="input-group-addon">@</span>
                                                                <input type="text" class="form-control" placeholder="New Username" name="user_name" required>
                                                            </div>

                                                        </div>

                                                        <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">
                                                        <input type="hidden" id="user_email" name="user_email" value="{{ PATIENT_PROFILE['user_email'] }}">
                                                        <div class="modal-footer">

                                                            <a class="btn btn-danger" data-dismiss="modal">Close</a>
                                                            <button type="submit" class="btn btn-success">Submit</button>

                                                        </div>

                                                        <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                    </form>
                                                </div>
                                                <!-- /.modal-content -->
                                            </div>
                                            <!-- /.modal-dialog -->
                                        </div>
                                        <!-- /.modal -->

                                    {% endif %}

                                </div>

                                <div class="tab-pane fade in" id="appointment">
                                    <br />

                                    {% if ROLE == 7 %}
                                        <a href="#" role="button" class="btn btn-default" data-toggle="modal" data-target="#addAppointment" rel="tooltip" data-placement="bottom" title="Insert New Patient Appointment Data to Database !"><i class="fa fa-plus"></i> Add New Appointment</a>
                                        <br>
                                        <hr>
                                    {% endif %}

                                    <div class="dataTable_wrapper">

                                        <table class="table table-striped table-bordered table-hover" id="all-appointment">
                                        <thead>
                                        <tr>
                                            <th class="cbn-table-center" width="20%">#ID</th>
                                            <th class="cbn-table-center">Type</th>
                                            <th class="cbn-table-center">Dentist</th>
                                            <th class="cbn-table-center">Schedule</th>
                                            <th class="cbn-table-center">Dentist Notes</th>
                                            {% if ( user.user_id != ID and ROLE == 7 ) %}
                                                <th class="cbn-table-center" width="12%">Action</th>
                                            {% endif %}
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% if PATIENT_APPOINTMENT|length > 0 %}
                                            {% for appointment in PATIENT_APPOINTMENT %}
                                                <tr>
                                                    <td class="cbn-table-center" width="20%"><strong>#{{ NAME }} - {{ appointment.created|replace({'-': '', ' ': '', ':': ''}) }} - {{ appointment.appointment_id|e }}</strong><br>{% if appointment.cancelled == 1 %}<span class="label label-danger">cancelled</span>{% endif %}</td>
                                                    <td class="cbn-table-center">{{ appointment.type }}</td>
                                                    <td class="cbn-table-center">{{ appointment.first_name }} {{ appointment.last_name }} {% if appointment.specialties %}<a class="label label-info">{{ appointment.specialties|e }}</a>{% endif %}</td>
                                                    <td class="cbn-table-center">
                                                        <strong>{{ appointment.start|replace({'T': ' at '}) }}</strong>
                                                        <br>
                                                        {% if dom.dueDate|date('Y-m-d') > appointment.appointment_date %}
                                                            {% if appointment.finished == 1 %}
                                                                <span class="label label-success">finished</span>
                                                            {% else %}
                                                                <span class="label label-danger">expired</span>
                                                            {% endif %}
                                                        {% endif %}
                                                    </td>
                                                    <td>{{ appointment.notes_dentist|raw }}</td>
                                                    {% if ( user.user_id != ID and ROLE == 7 ) %}
                                                        <td class="cbn-table-center" width="12%">

                                                            {% if appointment.cancelled == 1 %}
                                                                <a href="#" role="button" class="btn btn-warning" data-toggle="modal" data-target="#undoAppointment{{ appointment.appointment_id|e }}" rel="tooltip" data-placement="top" title="Activate Appointment Data ?"><i class="fa fa-reply"></i></a>
                                                                {% if appointment.finished == 0 %}
                                                                    <a href="#" role="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAppointment{{ appointment.appointment_id|e }}" rel="tooltip" data-placement="top" title="Delete Appointment Data ?"><i class="fa fa-trash"></i></a>
                                                                {% endif %}
                                                            {% else %}
                                                                {% if appointment.finished == 0 %}
                                                                    <a href="#" role="button" class="btn btn-warning" data-toggle="modal" data-target="#cancelAppointment{{ appointment.appointment_id|e }}" rel="tooltip" data-placement="top" title="Cancel Appointment Data ?"><i class="fa fa-times"></i></a>
                                                                {% else %}
                                                                    <span class="label label-success">FINISHED</span>
                                                                {% endif %}
                                                            {% endif %}

                                                        </td>
                                                    {% endif %}
                                                </tr>

                                                {% if ( user.user_id != ID and ROLE == 7 ) %}

                                                    <!-- Activated Appointment Modal -->
                                                    <div class="modal fade" id="undoAppointment{{ appointment.appointment_id|e }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                                    <h4 class="modal-title" id="myModalLabel">Activate Appointment : #{{ NAME }} - {{ appointment.created|replace({'-': '', ' ': '', ':': ''}) }} - {{ appointment.appointment_id|e }}</h4>
                                                                </div>

                                                                <form action="{{ urlFor( 'activatedPatientAppointmentAction' ) }}" method="post" role="form">

                                                                    <div class="modal-body">

                                                                        <div class="form-group">
                                                                            <h5>Are you sure want to activated this appointment ?</h5>
                                                                        </div>

                                                                        <input type="hidden" name="appointment_id" value="{{ appointment.appointment_id|e }}">

                                                                    </div>
                                                                    <div class="modal-footer">

                                                                        <a class="btn btn-danger" data-dismiss="modal">No</a>
                                                                        <button type="submit" class="btn btn-success pull-left">Yes</button>

                                                                    </div>

                                                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                                </form>

                                                            </div>
                                                            <!-- /.modal-content -->
                                                        </div>
                                                        <!-- /.modal-dialog -->
                                                    </div>
                                                    <!-- /.modal -->

                                                    <!-- Cancelled Appointment Modal -->
                                                    <div class="modal fade" id="cancelAppointment{{ appointment.appointment_id|e }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                                    <h4 class="modal-title" id="myModalLabel">Cancel Appointment : #{{ NAME }} - {{ appointment.created|replace({'-': '', ' ': '', ':': ''}) }} - {{ appointment.appointment_id|e }}</h4>
                                                                </div>

                                                                <form action="{{ urlFor( 'cancelledPatientAppointmentAction' ) }}" method="post" role="form">

                                                                    <div class="modal-body">

                                                                        <div class="form-group">
                                                                            <h5>Are you sure want to cancelled this appointment ?</h5>
                                                                        </div>

                                                                        <input type="hidden" name="appointment_id" value="{{ appointment.appointment_id|e }}">

                                                                    </div>
                                                                    <div class="modal-footer">

                                                                        <a class="btn btn-danger" data-dismiss="modal">No</a>
                                                                        <button type="submit" class="btn btn-success pull-left">Yes</button>

                                                                    </div>

                                                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                                </form>

                                                            </div>
                                                            <!-- /.modal-content -->
                                                        </div>
                                                        <!-- /.modal-dialog -->
                                                    </div>
                                                    <!-- /.modal -->

                                                    <!-- Deleted Appointment Modal -->
                                                    <div class="modal fade" id="deleteAppointment{{ appointment.appointment_id|e }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <div class="modal-content">
                                                                <div class="modal-header">
                                                                    <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                                    <h4 class="modal-title" id="myModalLabel">Delete Appointment : #{{ NAME }} - {{ appointment.created|replace({'-': '', ' ': '', ':': ''}) }} - {{ appointment.appointment_id|e }}</h4>
                                                                </div>

                                                                <form action="{{ urlFor( 'deletedPatientAppointmentAction' ) }}" method="post" role="form">

                                                                    <div class="modal-body">

                                                                        <div class="form-group">
                                                                            <h5>Are you sure want to deleted this appointment ?</h5>
                                                                        </div>

                                                                        <input type="hidden" name="appointment_id" value="{{ appointment.appointment_id|e }}">

                                                                    </div>
                                                                    <div class="modal-footer">

                                                                        <a class="btn btn-danger" data-dismiss="modal">No</a>
                                                                        <button type="submit" class="btn btn-success pull-left">Yes</button>

                                                                    </div>

                                                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                                </form>

                                                            </div>
                                                            <!-- /.modal-content -->
                                                        </div>
                                                        <!-- /.modal-dialog -->
                                                    </div>
                                                    <!-- /.modal -->

                                                {% endif %}

                                            {% endfor %}
                                        {% endif %}
                                        </tbody>
                                    </table>

                                    </div>

                                    <!-- Add New Patient Appointment Modal -->
                                    <div class="modal fade" id="addAppointment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <a class="close" data-dismiss="modal" aria-hidden="true">&times;</a>
                                                    <h4 class="modal-title" id="myModalLabel"><i class="fa fa-calendar"></i> Add New Patient Appointment</h4>
                                                </div>

                                                <form action="{{ urlFor( 'addPatientAppointmentAction' ) }}" method="post" role="form">
                                                    <div class="modal-body">

                                                        <div class="form-group">
                                                            <label for="type">Appointment Type</label>
                                                            <select name="type" id="type" class="form-control">
                                                                <option value="New Appointment">New Appointment</option>
                                                                <option value="Recall Appointment">Recall Appointment</option>
                                                            </select>
                                                        </div>

                                                        <div class="form-group">
                                                            <label for="dentist_id">Dentist</label>
                                                            <select name="dentist_id" id="dentist_id" class="form-control">
                                                                <option id="select_dentist">- Select Dentist -</option>
                                                                {% for dentist in ALL_DENTIST %}
                                                                    <option name="dentist_id" id="dentist_id" value="{{ dentist.dentist_id|e }}">{{ dentist.first_name|e }} {{ dentist.last_name|e }} - {{ dentist.specialties|e }}</option>
                                                                {% endfor %}
                                                            </select>
                                                        </div>

                                                        <div id="dentist_time_table_ajax" class="form-group">
                                                            <label for="timetable">Dentist Time Table</label>
                                                            <div id="dentist_timetable"></div>
                                                        </div>

                                                        <div class="form-group">
                                                            <div id="date_pick">
                                                                <label for="appointment_date_pick">Appointment Date</label>
                                                                <input id="appointment_date_pick" class="form-control" type="text" name="appointment_date_pick" required>
                                                            </div>
                                                        </div>

                                                        <div id="dentist_day_selected"></div>

                                                        <div id="appointment_notes" class="form-group">
                                                            <label for="notes">Notes</label>
                                                            <textarea name="notes" id="notes" class="form-control" placeholder="notes" style="height: 120px;"></textarea>
                                                        </div>

                                                        <input type="hidden" id="patient_id" name="patient_id" value="{{ PATIENT_PROFILE['patient_id'] }}">
                                                        <input type="hidden" name="user_email" value="{{ PATIENT_PROFILE['user_email'] }}">

                                                    </div>
                                                    <div id="appointment_footer" class="modal-footer">

                                                        <a class="btn btn-danger" data-dismiss="modal">Cancel</a>
                                                        <button type="submit" class="btn btn-success pull-left">Submit</button>

                                                    </div>

                                                    <input type="hidden" name="{{ CSRF_TOKEN_NAME }}" value="{{ CSRF_TOKEN_VALUE }}"/>

                                                </form>

                                            </div>
                                            <!-- /.modal-content -->
                                        </div>
                                        <!-- /.modal-dialog -->
                                    </div>
                                    <!-- /.modal -->

                                </div>

                            </div>
                        </div>
